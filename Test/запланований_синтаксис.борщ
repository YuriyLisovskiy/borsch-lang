// Приклад класу.
клас Людина
{
    конструктор(імя)
    {
        я.імя = імя;
    }

    метод отримати_імя() -> (рядок, помилка)
    {
        повернути я.імя, нуль;
    }
}

// Приклад циклу 'для':
текст = "Якийсь текст.";
довжина_послідовності = довжина(текст);
для(і : 0..довжина_послідовності)
{
    друкр(текст[і]);
}

для(і = 0; і < довжина_послідовності; і+=1)
{
    друкр(текст[і]);
}

// Приклад функції, що повертає кілька значень.
функція купівля(список_продуктів: ...рядок) -> цілий, дійсний
{
    кількість = довжина(список_продуктів)
    якщо(кількість == 0)
    {
        паніка("не можна просто так зайти в магазин і не купити нічого");
    }

    повернути кількість, 125.5;
}

кількість, вартість = купівля("хлібчик", "масло");
