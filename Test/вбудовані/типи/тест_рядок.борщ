// Тестування умовних операторів
рядок1 = "Привіт";
рядок2 = "Бувай";
переконатися((рядок1 == рядок2) == хиба, "оператор '==' працює неправильно: " + рядок(рядок1 == рядок2) + " != " + рядок(хиба));
переконатися((рядок1 < рядок2) == хиба, "оператор '<' працює неправильно: " + рядок(рядок1 < рядок2) + " != " + рядок(хиба));
переконатися((рядок1 <= рядок2) == хиба, "оператор '<=' працює неправильно: " + рядок(рядок1 <= рядок2) + " != " + рядок(хиба));
переконатися((рядок1 > рядок2) == істина, "оператор '>' працює неправильно: " + рядок(рядок1 > рядок2) + " != " + рядок(істина));
переконатися((рядок1 >= рядок2) == істина, "оператор '>=' працює неправильно: " + рядок(рядок1 >= рядок2) + " != " + рядок(істина));
переконатися("Рядок" != істина, "оператор != працює неправильно: " + рядок("Рядок" != істина) + " != " + рядок(істина));
переконатися("Рядок" != хиба, "оператор != працює неправильно: " + рядок("Рядок" != хиба) + " != " + рядок(істина));

// Тести оператора конкатенації (додавання):
переконатися("Привіт" + ", Світе!" == "Привіт, Світе!", "оператор + працює неправильно: " + "\"Привіт" + ", Світе!\"" + " != " + "\"Привіт, Світе!\"");
переконатися("Привіт" + "" == "Привіт", "оператор + працює неправильно: " + "\"Привіт" + "\"" + " != " + "\"Привіт\"");
переконатися("" + ", Світе!" == ", Світе!", "оператор + працює неправильно: " + "\"" + ", Світе!\"" + " != " + "\", Світе!\"");

// Тести множення:
переконатися("Привіт " * 0 == "", "оператор * працює неправильно: \"" + рядок("Привіт " * 0) + "\" != " + "\"\"");
переконатися("Привіт " * -1 == "", "оператор * працює неправильно: \"" + рядок("Привіт " * -1) + "\" != " + "\"\"");
переконатися("Привіт " * 3 == "Привіт Привіт Привіт ", "оператор * працює неправильно: \"" + рядок("Привіт " * 3) + "\" != " + "\"Привіт Привіт Привіт \"");
переконатися("Привіт " * істина == "Привіт ", "оператор * працює неправильно: \"" + рядок("Привіт " * істина) + "\" != " + "\"Привіт \"");
переконатися("Привіт " * хиба == "", "оператор * працює неправильно: \"" + рядок("Привіт " * хиба) + "\" != " + "\"\"");
