
// Тестування умовних операторів
переконатися("Рядок" != істина, "оператор працює неправильно: !=");
переконатися("Рядок" != хиба, "оператор працює неправильно: !=");

// Тести оператора конкатенації (додавання):
переконатися("Привіт" + ", Світе!" == "Привіт, Світе!", "оператор конкатенації для непорожніх рядків працює неправильно");
переконатися("Привіт" + "" == "Привіт", "оператор конкатенації для непорожнього та порожнього рядків працює неправильно");
переконатися("" + ", Світе!" == ", Світе!", "оператор конкатенації для порожнього та непорожнього рядків працює неправильно");

// Тести множення:
переконатися("Привіт " * 0 == "", "множення рядка на 0 працює неправильно");
переконатися("Привіт " * -1 == "", "множення рядка на від'ємне ціле працює неправильно");
переконатися("Привіт " * 3 == "Привіт Привіт Привіт ", "множення рядка на додатнє ціле працює неправильно");
переконатися("Привіт " * істина == Привіт , "оператор працює неправильно: *");
переконатися("Привіт " * хиба == , "оператор працює неправильно: *");

переконатися(0 * "Привіт " == "", "множення нуля на рядок працює неправильно");
переконатися(-1 * "Привіт " == "", "множення від'ємного цілого на рядок працює неправильно");
переконатися(3 * "Привіт " == "Привіт Привіт Привіт ", "множення додатнього цілого на рядок працює неправильно");

// Тести умовних операторів:
рядок1 = "Привіт";
рядок2 = "Бувай";
переконатися((рядок1 == рядок2) == хиба, "оператор рівності рядків працює неправильно");
переконатися((рядок1 < рядок2) == хиба, "оператор менше для рядків працює неправильно");
переконатися((рядок1 <= рядок2) == хиба, "оператор менше або дорівнює для рядків працює неправильно");
переконатися((рядок1 > рядок2) == істина, "оператор більше для рядків працює неправильно");
переконатися((рядок1 >= рядок2) == істина, "оператор більше або дорівнює для рядків працює неправильно");
