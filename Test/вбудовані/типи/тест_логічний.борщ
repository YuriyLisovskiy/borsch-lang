// Тестування побітових операторів
переконатися(істина << істина == 2, "оператор << працює неправильно: " + рядок(істина << істина) + " != " + рядок(2));
переконатися(істина << хиба == 1, "оператор << працює неправильно: " + рядок(істина << хиба) + " != " + рядок(1));
переконатися(хиба << істина == 0, "оператор << працює неправильно: " + рядок(хиба << істина) + " != " + рядок(0));
переконатися(хиба << хиба == 0, "оператор << працює неправильно: " + рядок(хиба << хиба) + " != " + рядок(0));
переконатися(істина << 5 == 32, "оператор << працює неправильно: " + рядок(істина << 5) + " != " + рядок(32));
переконатися(істина << 0 == 1, "оператор << працює неправильно: " + рядок(істина << 0) + " != " + рядок(1));
переконатися(хиба << 5 == 0, "оператор << працює неправильно: " + рядок(хиба << 5) + " != " + рядок(0));
переконатися(хиба << 0 == 0, "оператор << працює неправильно: " + рядок(хиба << 0) + " != " + рядок(0));

переконатися(істина >> істина == 0, "оператор >> працює неправильно: " + рядок(істина >> істина) + " != " + рядок(0));
переконатися(істина >> хиба == 1, "оператор >> працює неправильно: " + рядок(істина >> хиба) + " != " + рядок(1));
переконатися(хиба >> істина == 0, "оператор >> працює неправильно: " + рядок(хиба >> істина) + " != " + рядок(0));
переконатися(хиба >> хиба == 0, "оператор >> працює неправильно: " + рядок(хиба >> хиба) + " != " + рядок(0));
переконатися(істина >> 5 == 0, "оператор >> працює неправильно: " + рядок(істина >> 5) + " != " + рядок(0));
переконатися(істина >> 0 == 1, "оператор >> працює неправильно: " + рядок(істина >> 0) + " != " + рядок(1));
переконатися(хиба >> 5 == 0, "оператор >> працює неправильно: " + рядок(хиба >> 5) + " != " + рядок(0));
переконатися(хиба >> 0 == 0, "оператор >> працює неправильно: " + рядок(хиба >> 0) + " != " + рядок(0));

переконатися(істина | істина == істина, "оператор | працює неправильно: " + рядок(істина | істина) + " != " + рядок(істина));
переконатися(істина | хиба == істина, "оператор | працює неправильно: " + рядок(істина | хиба) + " != " + рядок(істина));
переконатися(хиба | істина == істина, "оператор | працює неправильно: " + рядок(хиба | істина) + " != " + рядок(істина));
переконатися(хиба | хиба == хиба, "оператор | працює неправильно: " + рядок(хиба | хиба) + " != " + рядок(хиба));
переконатися(істина | 5 == 5, "оператор | працює неправильно: " + рядок(істина | 5) + " != " + рядок(5));
переконатися(істина | 0 == 1, "оператор | працює неправильно: " + рядок(істина | 0) + " != " + рядок(1));
переконатися(істина | -5 == -5, "оператор | працює неправильно: " + рядок(істина | -5) + " != " + рядок(-5));
переконатися(хиба | 5 == 5, "оператор | працює неправильно: " + рядок(хиба | 5) + " != " + рядок(5));
переконатися(хиба | 0 == 0, "оператор | працює неправильно: " + рядок(хиба | 0) + " != " + рядок(0));
переконатися(хиба | -5 == -5, "оператор | працює неправильно: " + рядок(хиба | -5) + " != " + рядок(-5));

переконатися(істина ^ істина == хиба, "оператор ^ працює неправильно: " + рядок(істина ^ істина) + " != " + рядок(хиба));
переконатися(істина ^ хиба == істина, "оператор ^ працює неправильно: " + рядок(істина ^ хиба) + " != " + рядок(істина));
переконатися(хиба ^ істина == істина, "оператор ^ працює неправильно: " + рядок(хиба ^ істина) + " != " + рядок(істина));
переконатися(хиба ^ хиба == хиба, "оператор ^ працює неправильно: " + рядок(хиба ^ хиба) + " != " + рядок(хиба));
переконатися(істина ^ 5 == 4, "оператор ^ працює неправильно: " + рядок(істина ^ 5) + " != " + рядок(4));
переконатися(істина ^ 0 == 1, "оператор ^ працює неправильно: " + рядок(істина ^ 0) + " != " + рядок(1));
переконатися(істина ^ -5 == -6, "оператор ^ працює неправильно: " + рядок(істина ^ -5) + " != " + рядок(-6));
переконатися(хиба ^ 5 == 5, "оператор ^ працює неправильно: " + рядок(хиба ^ 5) + " != " + рядок(5));
переконатися(хиба ^ 0 == 0, "оператор ^ працює неправильно: " + рядок(хиба ^ 0) + " != " + рядок(0));
переконатися(хиба ^ -5 == -5, "оператор ^ працює неправильно: " + рядок(хиба ^ -5) + " != " + рядок(-5));

переконатися(істина & істина == істина, "оператор & працює неправильно: " + рядок(істина & істина) + " != " + рядок(істина));
переконатися(істина & хиба == хиба, "оператор & працює неправильно: " + рядок(істина & хиба) + " != " + рядок(хиба));
переконатися(хиба & істина == хиба, "оператор & працює неправильно: " + рядок(хиба & істина) + " != " + рядок(хиба));
переконатися(хиба & хиба == хиба, "оператор & працює неправильно: " + рядок(хиба & хиба) + " != " + рядок(хиба));
переконатися(істина & 5 == 1, "оператор & працює неправильно: " + рядок(істина & 5) + " != " + рядок(1));
переконатися(істина & 0 == 0, "оператор & працює неправильно: " + рядок(істина & 0) + " != " + рядок(0));
переконатися(істина & -5 == 1, "оператор & працює неправильно: " + рядок(істина & -5) + " != " + рядок(1));
переконатися(хиба & 5 == 0, "оператор & працює неправильно: " + рядок(хиба & 5) + " != " + рядок(0));
переконатися(хиба & 0 == 0, "оператор & працює неправильно: " + рядок(хиба & 0) + " != " + рядок(0));
переконатися(хиба & -5 == 0, "оператор & працює неправильно: " + рядок(хиба & -5) + " != " + рядок(0));

переконатися(~істина == -2, "оператор ~ працює неправильно: " + рядок(~істина) + " != " + рядок(-2));
переконатися(~хиба == -1, "оператор ~ працює неправильно: " + рядок(~хиба) + " != " + рядок(-1));
