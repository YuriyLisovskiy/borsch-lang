@'математика/константи.борщ' -> константи

клас Борщ
{
    /*
        Як варить мама.
    */

    фн __конструктор__(я: Борщ, вода: дійсний) -> абиякий
    {
        // в літрах
        я.вода = вода;

        // в зубчиках
        я.часничок = константи.макс_ціле;

        повернути я;
    }

    // в пучках
    фн додати_солі(я: абиякий, кількість: дійсний) -> абиякий
    {
        я.сіль = кількість;
    }

    // в штуках
    бурачки = 4;

    // в шт
    бульба = 6;

    // в шт
    селера = 0.7;

    // в шт
    морква = 2;

    // в шт
    мясо = 11;

    // в л
    томатна_пюрешка = 0.4;

    // в шт
    цибулька = 1;

    // в шт
    капуста = 0.5;

    // в середніх пучках
    петрушка = 1;
}

друкр(Борщ);
друкр(Борщ.__атрибути__);

борщ = Борщ(2.5);
борщ.додати_солі(борщ, 1.5);

друкр(борщ);
друкр(борщ.__атрибути__);
