@'математика/константи.борщ' -> константи

клас Борщ
{
    фн __конструктор__(я: Борщ, вода: дійсний, бурачки: цілий)
    {
        // в літрах
        я.вода = вода;

        // в штуках
        я.бурачки = бурачки;

        // в шт
        я.бульба = 0;

        // в зубчиках
        я.часничок = константи.макс_ціле;

        // в пучках
        я.сіль = 0.0;
    }

    // в пучках
    фн додати_солі(я: Борщ, кількість: дійсний) -> Борщ
    {
        я.сіль = я.сіль + кількість;
    }

    // в шт
    фн додати_бульби(я: Борщ, кількість: цілий) -> Борщ
    {
        я.бульба = я.бульба + кількість;
    }
}

друкр(Борщ);
друкр(Борщ.__атрибути__);

борщ = Борщ(2.5, 3).додати_солі(1.5)
                   .додати_бульби(6);
друкр(борщ);

друкр(борщ.__атрибути__);

борщ2 = копіювати(борщ);
борщ2.додати_солі(3.0);
друкр(борщ2.__атрибути__);
