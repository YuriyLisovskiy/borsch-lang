//кінець

функція заокруглити(х: дійсний, н_знаків: цілий): дійсний
    переконатися(н_знаків > 0, "кількість знаків менша або дорівнює нулю");
    степінь = 10 ** н_знаків;
    х = х * степінь;
    якщо (х >= 0)
        повернути цілий(х + 0.5) / степінь;
    кінець;

    повернути цілий(х - 0.5, 111) / степінь;
кінець;

функція мейн()
    з = -12344.4545;
    друкр(рядок(з) + " == " + рядок(
        заокруглити(з, 3)
    ));
кінець;

мейн();
