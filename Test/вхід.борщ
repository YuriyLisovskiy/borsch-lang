//кінець

функція заокруглити(х: дійсне, н_знаків: ціле): дійсне
    переконатися(н_знаків > 0, "кількість знаків менша або дорівнює нулю");
    степінь = 10 ** н_знаків;
    х = х * степінь;
    якщо (х >= 0)
        повернути ціле(х + 0.5) / степінь;
    кінець;

    повернути ціле(х - 0.5, 111) / степінь;
кінець;

функція мейн()
    з = -12344.4545;
    друкр(рядок(з) + " == " + рядок(
        заокруглити(з, 3)
    ));
кінець;

небезпечно
    мейн();
    //1 / 0.0;
піймати(помилка: Помилка)
    друкр("Перехопив: тип " + рядок(тип(помилка)));
    панікувати помилка;
    друкр("Тест Тест Тест");
кінець;
