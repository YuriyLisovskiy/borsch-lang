
// Тести оператора конкатенації (додавання):
припустити("Привіт" + ", Світе!" == "Привіт, Світе!", "оператор конкатенації для непорожніх рядків працює неправильно");
припустити("Привіт" + "" == "Привіт", "оператор конкатенації для непорожнього та порожнього рядків працює неправильно");
припустити("" + ", Світе!" == ", Світе!", "оператор конкатенації для порожнього та непорожнього рядків працює неправильно");

// Тести множення:
припустити("Привіт " * 0 == "", "множення рядка на 0 працює неправильно");
//припустити("Привіт " * -1 == "", "множення рядка на від'ємне ціле працює неправильно");
припустити("Привіт " * 3 == "Привіт Привіт Привіт ", "множення рядка на додатнє ціле працює неправильно");

припустити(0 * "Привіт " == "", "множення нуля на рядок працює неправильно");
//припустити(-1 * "Привіт " == "", "множення від'ємного цілого на рядок працює неправильно");
припустити(3 * "Привіт " == "Привіт Привіт Привіт ", "множення додатнього цілого на рядок працює неправильно");

// Тести умовних операторів:
рядок1 = "Привіт";
рядок2 = "Бувай";
припустити((рядок1 == рядок2) == хиба, "оператор рівності рядків працює неправильно");
припустити((рядок1 < рядок2) == хиба, "оператор менше для рядків працює неправильно");
припустити((рядок1 <= рядок2) == хиба, "оператор менше або дорівнює для рядків працює неправильно");
припустити((рядок1 > рядок2) == істина, "оператор більше для рядків працює неправильно");
припустити((рядок1 >= рядок2) == істина, "оператор більше або дорівнює для рядків працює неправильно");
