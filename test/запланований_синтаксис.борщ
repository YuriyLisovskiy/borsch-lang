// Приклад підключення стандартної бібліотеки.
@<формули> -> формули

// Приклад підключення кастомної бібліотеки.
@"формули.борщ" -> формули

// Приклад класу.
клас Людина
{
    конструктор(імя)
    {
        я.імя = імя;
    }

    метод отримати_імя() -> (рядок, помилка)
    {
        повернути я.імя, нуль;
    }
}

функція привітати(ціль) -> помилка
{
    друк("Вітаю,", ціль);

    // Приклад повернення помилки.
    повернути помилка("Тут сталася дивна помилка 0_о");
}

// Приклад перехоплення помилки.
помилка = привітати("Петре");
якщо(помилка)
{
    // Тут генеруємо виняток.
    паніка(помилка);
}

// Приклад циклу 'для':
текст = "Якийсь текст.";
довжина_послідовності = довжина(текст);
для (індекс = 0; індекс < довжина_послідовності; індекс += 1)
{
    друкр(текст[індекс]);
}
