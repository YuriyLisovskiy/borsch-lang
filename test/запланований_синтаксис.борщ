// Приклад підключення стандартної бібліотеки.
@<формули> -> формули

// Приклад підключення кастомної бібліотеки.
@"формули.борщ" -> формули

// Приклад класу.
клас Людина
{
    @конструктор(імя)
    {
        я.імя = імя;
    }

    @метод отримати_імя()
    {
        повернути я.імя;
    }
}

функція привітати(ціль)
{
    друк("Вітаю,", ціль);

    // Приклад повернення помилки.
    повернути помилка("Тут сталася дивна помилка 0_о");
}

// Приклад галуженого алгоритму.
якщо(умова)
{
    // Код...
}
інакше якщо(інша_умова)
{
    // Код...
}
інакше
{
    // Код...
}

// Приклад перехоплення помилки.
результат = привітати("Петре");
якщо(виникла_помилка(результат))
{
    // Тут генеруємо виняток.
    паніка(результат);
}
