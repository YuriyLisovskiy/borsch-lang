/*              Документація | Оператори
 *
 *   У мові Борщ доступні такі оператори:
 *     1) оператор присвоєння;
 *     1) арифметичні оператори;
 *     1) логічні оператори;
 *     1) оператори порівняння;
 *     1) побітові оператори;
 *
 *   Приклади наведені нижче.
 */

// Оператор присвоєння:
змінна = 7.3;


// Необхідні змінні для прикладів:
а = 18;
б = 3;
в = істина;
г = хиба;
якийсь_список = [1, 2, "3", ["4", хиба]];
якийсь_словник = {"а": "б", "в": "г"};


// Арифметичні оператори:

// унарний мінус:
-а

// унарний плюс:
+а

// сума:
а + б;

// різниця:
а - б;

// добуток:
а * б;

// частка:
а / б;

// модуль (остача від ділення):
а % б;

// піднесення до степеня:
а ** б;


// Логічні оператори:

// 'і':
в && г;

// 'або':
в || г;

// 'не':
!в або г;


// Оператори порівняння:

// 'дорівнює':
а == б;

// 'не дорівнює':
а != б;

// 'більше':
а > б;

// 'більше або дорівнює':
а >= б;

// 'менше':
а < б;

// 'менше або дорівнює':
а <= б;


// TODO: Побітові оператори:
// TODO: 'і'
а & б

// TODO: 'або'
а | б

// TODO: 'виключне або'
а ^ б

// TODO: 'не'
~а

// TODO: 'зсув ліворуч'
а << б

// TODO: 'зсув праворуч'
а >> б


// Оператори доступу до елементів послідовності:

// оператор довільного доступу (читання):
елемент = якийсь_список[2];             // -> "3"

// оператор довільного доступу (запис):
якийсь_список[2] = [6, 7, "8"];         // -> [1, 2, [6, 7, "8"], ["4", хиба]]

// оператор відсікання:
частина_списку = якийсь_список[1:3];    // -> [2, "3"]

// оператор доступу до значення словника за ключем:
значення = якийсь_словник["а"];
