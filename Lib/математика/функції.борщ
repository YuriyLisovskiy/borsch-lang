//функція не_число() -> дійсний...

функція стеля(х: дійсний) -> цілий
{
    _х = дійсний(цілий(х));
    якщо(_х < х)
    {
        _х = _х + 1.0;
    }

    повернути цілий(_х);
}

функція підлога(х: дійсний) -> цілий
{
    якщо (х < 0)
    {
        повернути цілий(х) - 1;
    }

    повернути цілий(х);
}
