//функція не_число() -> дійсний...

функція стеля(x: дійсний): цілий
{
    _х = дійсний(цілий(x));
    якщо(_х < x)
    {
        _х = _х + 1.0;
    }

    повернути цілий(_х);
}

функція підлога(х: дійсний): цілий
{
    якщо (х < 0)
    {
        повернути цілий(х) - 1;
    }

    повернути цілий(х);
}
