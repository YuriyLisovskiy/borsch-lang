функція стеля(x: дійсний): цілий
    _х = дійсний(цілий(x));
    якщо(_х < x)
        _х = _х + 1.0;
    кінець;

    повернути цілий(_х);
кінець;

функція підлога(х: дійсний): цілий
    якщо (х < 0)
        повернути цілий(х) - 1;
    кінець;

    повернути цілий(х);
кінець;

функція факторіал(число: цілий): цілий
    якщо (число == 0)
        повернути 1;
    кінець;

    повернути число * факторіал(число - 1);
кінець;

функція степінь(число: цілий, експонента: цілий): цілий
    якщо (експонента == 0)
        повернути 1;
    кінець;

    якщо (експонента < 0)
        повернути 1 / степінь(число, -експонента);
    кінець;

    якщо (експонента % 2 != 0)
        повернути число * степінь(число, експонента - 1);
    кінець;

    якщо (експонента % 2 == 0)
        половина = степінь(число, підлога(експонента / 2));
        повернути половина * половина;
    кінець;
кінець;

функція заокруглити(х: дійсний, н_знаків: цілий): дійсний
    переконатися(н_знаків > 0, "кількість знаків менша або дорівнює нулю");

    степінь = степінь(10, н_знаків);
    х = х * степінь;
    якщо (х >= 0)
        повернути цілий(х + 0.5) / степінь;
    кінець;

    повернути цілий(х - 0.5) / степінь;
кінець;
