
__експортовані__ = ["Помилка"];

клас Помилка {

	функція __конструктор__(я: Помилка, повідомлення: рядок) {
		я._повідомлення = повідомлення;
	}

	функція __рядок__(я: Помилка): рядок {
		повернути я._повідомлення;
	}

	функція __оператор_нерівності__(я: Помилка, інший: довільний?): логічний {
		якщо (тип(інший) == Помилка) {
			повернути хиба;
		}

		повернути істина;
	}
}
