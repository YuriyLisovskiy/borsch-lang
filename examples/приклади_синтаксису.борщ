#підключити <./формули.борщ>

клас Людина
{
    конструктор(я, імя)
    {
        я.імя = імя;
    }

    отримати_імя(я)
    {
        повернути я.імя;
    }
}

функція вітання(ціль)
{
    друк("Доброго дня,", ціль);
}

вітання("Петре");

змінна = 5 + 9 + (4 - 6);
друк(змінна);
іншаЗмінна = змінна + 3;
друк(іншаЗмінна + змінна - 6);
