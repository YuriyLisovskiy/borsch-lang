/*              Документація | Змінні
 *
 *   У назві змінної можна використовувати лише
 *   українські літери, цифри та нижнє підкреслення - '_'.
 *
 *   Мова Борщ підтримує змінні цілого, дійсного, логічного
 *   та рядкового типів.
 */

// Цілий тип.
змінна_1_цілого_типу = 21;

// Дійсний тип.
зміннаДісногоТипу = 19.99;

// Логічний тип.
логічнаЗміннаІстини = істина;
логічнаЗміннаХиби = хиба;


// Послідовності.
// TODO: описати індексування: звичайне та з від'ємними індексами.

// Рядковий тип.
рядок_тексту = "Якийсь текст.";

// Список.
список_значень = [1, 2.2, "3", істина, ["тут", 2, "слова"]];
